{
  "name": "iobroker.batrium-bms",
  "version": "0.7.0",
  "description": "Track Metrics of your Batrium BMS published via UDP",
  "author": {
    "name": "Bembelstemmer",
    "email": "kontakt@it-amm.de"
  },
  "homepage": "https://github.com/bembelstemmer/ioBroker.batrium-bms",
  "license": "MIT",
  "keywords": [
    "batrium",
    "bms",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bembelstemmer/ioBroker.batrium-bms.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "binary-parser": "^2.2.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@tsconfig/node20": "^20.1.8",
    "@types/binary-parser": "^1.8.0",
    "@types/node": "^25.0.0",
    "@types/proxyquire": "^1.3.31",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --fix -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/bembelstemmer/ioBroker.batrium-bms/issues"
  },
  "readmeFilename": "README.md"
}
